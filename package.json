{
  "name": "pmweather",
  "private": true,
  "version": "0.5.0",
  "main": "src/deskApp.cjs",
  "build": {
    "appId": "com.pmweather.app",
    "productName": "PM_Weather",
    "files": [
      "dist/**/*",
      "src/deskApp.cjs",
      "src/preload.js",
      "src/db/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "src/assets"
    },
    "extraResources": [
      {
        "from": "src/db",
        "to": "db",
        "filter": ["*.db"]
      },
      {
        "from": "src/assets",
        "to": "assets",
        "filter": ["*.webp"]
      }
    ],
    "asar": true,
    "win": {
      "target": ["nsis"],
      "icon": "src/assets/sun.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "scripts": {
    "dev": "vite --open --port 3000",
    "build": "vite build",
    "serve": "vite preview --host --open --port 3000",
    "start": "react-scripts start",
    "electron": "electron .",
    "ddev": "concurrently \"vite --port 3000\" \"cross-env NODE_ENV=dev electron .\"",
    "dbuild": "vite build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.1",
    "vite": "^6.3.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "better-sqlite3": "^11.10.0",
    "bootstrap": "^5.3.6",
    "react": "^19.1.0",
    "react-autosuggest": "^10.1.0",
    "react-bootstrap": "^2.10.10",
    "react-bootstrap-icons": "^1.11.6",
    "react-date-range": "^2.0.1",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0"
  }
}
